<html>
<head>
    <link rel="stylesheet" href="../../static/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../static/css/bootstrap-theme.min.css">
    <link rel="shortcut icon" href="../../static/images/favicon.ico" type="image/x-icon"/>
    <link rel="stylesheet" href="../../static/css/signin.css">
    <script src="../../static/js/jquery-1.11.0.min.js"></script>
    <script src="../../static/js/bootstrap.min.js"></script>
    {% block head %}
    {% endblock %}
    <meta content="text/html; charset=UTF-8">
    <title>TSU Simple CMS Admin Page</title>
</head>
<body style="padding-bottom: 0px">
{% block navbar %}
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/admin">TSU CMS</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li {% block posts %}{% endblock %}><a href="/admin/posts">Posts</a></li>
                    <li {% block themes %}{% endblock %}><a href="/admin/themes">Themes</a></li>
                    <li {% block contact %}{% endblock %}><a href="/admin/contact">Contact</a></li>
                    <li {% block password %}{% endblock %}><a href="/admin/password">Password</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <form class="navbar-form navbar-right" role="form" action="/admin/logout" method="post">
                        <button type="submit" class="btn btn-primary">logout</button>
                    </form>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
<div class="container">
    {% block content %}

    {% endblock %}
</div>
</body>
</html>