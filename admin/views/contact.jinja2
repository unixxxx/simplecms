{% extends "admin/views/base.jinja2" %}
{% block contact %}
    class="active"
{% endblock %}

{% block content %}
    <div class="jumbotron">
        <form class="form-signin" role="form" action="/admin/contact" method="POST">
            <h2 class="form-signin-heading"></h2>

            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Enter Email"
                       value={{ email }}>
            </div>
            {% if  saved %}
                <div class=" alert alert-success" style="text-align: center">saved</div>
            {% endif %}
            {% if  errorMessage %}
                <div class=" alert alert-danger" style="text-align: center">{{ errorMessage }}</div>
            {% endif %}
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
{% endblock %}